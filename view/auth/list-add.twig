{% extends 'template/base.twig' %}
{% set title = 'Lists' %}
{% block styles %}
    <link href="/css/materialize.min.css" rel="stylesheet" type="text/css">
    <link href="/css/materializeaddons.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}

    {% include 'template/header.twig' %}

    <main>
       <div class="section" style="padding-top: 165px;">
           <div class="container">
               <div class="row">
                   <form class="col s12" method="post">
                       <div class="row">
                           <div class="input-field col s12">
                               <select name="band" id="band" class="validate">
                                   <option value="0">Hoved</option>
                                   <option value="1">Junior</option>
                                   <option value="2">Aspirant</option>
                               </select>
                               <label for="band">Hvilket korps spiller musikanten i?</label>
                               <span class="helper-text" data-error="wrong" data-success="right"></span>
                           </div>
                       </div>
                       <div class="row">
                           <div class="input-field col s6">
                               <input id="name" name="name" type="text" class="validate">
                               <label for="name">Musikant navn</label>
                               <span class="helper-text" data-error="wrong" data-success="right"></span>
                           </div>
                           <div class="input-field col s6">
                               <input id="birth_date" name="birth_date" type="date" class="validate">
                               <label for="birth_date">FÃ¸dsels dato</label>
                               <span class="helper-text" data-error="wrong" data-success="right"></span>
                           </div>
                       </div>
                       <div class="row">
                           <div class="input-field col s12">
                               <input id="address" name="address" type="text" class="validate">
                               <label for="address">Adresse</label>
                               <span class="helper-text" data-error="wrong" data-success="right"></span>
                           </div>
                       </div>
                       <div class="row">
                           <div class="input-field col s6">
                               <input id="email" name="email" type="email" class="validate">
                               <label for="email">Email</label>
                               <span class="helper-text" data-error="wrong" data-success="right"></span>
                           </div>

                           <div class="input-field col s6">
                               <input id="number" name="number" type="number" class="validate">
                               <label for="number">Nummer</label>
                               <span class="helper-text" data-error="wrong" data-success="right"></span>
                           </div>
                       </div>
                       <div class="fixed-action-btn">
                           <button class="btn-floating waves-effect btn-large hsk-red">
                               <i class="material-icons">save</i>
                           </button>
                       </div>
                   </form>
               </div>
           </div>
       </div>
    </main>

    {% include 'template/footer-online.twig' %}

{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script type="text/javascript" src="/js/general.js"></script>
{% endblock %}







